<div class="appointment-type-wrapper">
  <div class="appointment-type-intro">
    <h2 class="appointment-type-intro-title text-uppercase">{{ 'Commencez d√®s maintenant, Prenez votre rendez-vous pour'|t }}</h2>
  </div>
  <div class="row justify-content-center borne-services__items">
    {% set destination_route = 'vactory_appointment.site_appointment_submit_form' %}
    {% for item in content.appointment_types %}
      {% set image = file_url(item.image_uri) %}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 pb-2" onClick="window.open('{{ url(destination_route, {'agency': item.agency, 'appointment_type': item.appointment_type_path}) }}', '_self')">
        <article class="push-card push-card--service h-100 bg-white border border--active rounded shadow">
          <div class="push-card__icon">
            <img src="{{ image }}" alt="{{ item.title }}">
          </div>
          <hr>
          <h3 class="push-card__title">{{ item.title }}</h3>
        </article>
      </div>
    {% endfor %}
  </div>
</div>

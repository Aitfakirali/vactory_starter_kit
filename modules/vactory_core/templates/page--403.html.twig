{#
/**
 * @file
 * Template for the main page.
 */
#}


{% if page.header %}
    {{ page.header }}
{% endif %}

<main role="main">
    {% if page.bridge %}
        {{ page.bridge }}
    {% endif %}
    {% block v_page_content %}
        <div class="container page-content page-403">
            <h2> {{ 'Oups :(' | trans }} </h2>
            <p>
                {{ 'You are not authorized to access this page ...' | t }}
            </p>
            <p>
                <a href="{{ url('<front>') }}" class="btn btn-primary">{{ 'Home'|t }}</a>
            </p>
        </div>
    {% endblock %}
</main>

{% if page.footer %}
    {{ page.footer }}
{% endif %}

{% if page.bottom %}
    {{ page.bottom }}
{% endif %}
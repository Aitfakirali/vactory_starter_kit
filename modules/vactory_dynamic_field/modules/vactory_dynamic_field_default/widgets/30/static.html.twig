<div class="fdb-block">
    <div class="container">
                <div class="row text-center">
                  <div class="col">
                     <h2 class="text-light">Title</h2>
                  </div>
                </div>
        <div class="row text-center justify-content-sm-center no-gutters">
            {% for item in 0..2 %}
                {% set placehold = "https://picsum.photos/id/" ~ random(1, 200) ~ "/160/160.jpg" %}
                {% if loop.index >= 2 %}
                    <div class="col-12 col-sm-10 col-md-8 col-lg-7 col-xl-4 m-auto pt-5 pt-xl-0">
                {% else %}
                    <div class="col-12 col-sm-10 col-md-8 col-lg-7 col-xl-4 m-auto">
                {% endif %}

                    <div class="fdb-box fdb-touch">
                            <img alt="Image Alt"
                                class="img-fluid rounded-circle lazyload"
                                src="{{ content.image_placeholder }}"
                                data-src="{{ placehold }}">
                            <h2>Title</h2>
                            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. </p>
                             <p class="mt-4"><a href="#" >Read More</a></p>
                    </div>

                </div>

            {% endfor %}
        </div>
    </div>
</div>

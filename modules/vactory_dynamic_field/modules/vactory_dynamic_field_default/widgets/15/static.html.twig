<div class="row t-6-points-indices vf-slick-slider vf-slick-mobile slick-padding wow"
     data-mobile-centermode="true"
     data-mobile-centerpadding="40px">
  {% for item in 0..2 %}
    {% set random_text = random(1, 1000) %}
    {% set placehold = "https://picsum.photos/id/" ~ random(1, 200) ~ "/207/200.jpg" %}

    <div class="col-md-4 t-item">
      <div class="t-box">
        <img alt="Image Alt"
             class="img-fluid lazyload"
             src="{{ content.image_placeholder }}"
             data-src="{{ placehold }}">
        <div class="t-box-description">
          <div class="t-box-description-number">
            <p><span class="js-number-animate" data-number="{{ random_text }}">{{ 0 }}</span>%</p>
          </div>
          <p class="text-small">Name</p>
        </div>
      </div>
    </div>

  {% endfor %}
</div>



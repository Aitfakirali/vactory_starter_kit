<div class="fdb-block fdb-block-hasbackground">
            {% if extra_fields.title is not empty %}
            <div class="row text-center">
              <div class="col">
                <h2 class="text-white">{{ extra_fields.title }}</h2>
              </div>
            </div>
            {% endif %}
    <div class="container">
        <div class="row mt-5 align-items-center no-gutters">

            {% for item in content %}

                {% set link_attributes = create_attribute() %}
                {% set link_attributes = item.link.attributes.id is not empty ? link_attributes.setAttribute('id', item.link.attributes.id ) : link_attributes %}
                {% set link_attributes = item.link.attributes.target is not empty ? link_attributes.setAttribute('target', item.link.attributes.target ) : link_attributes %}
                {% set link_attributes = item.link.attributes.rel is not empty ? link_attributes.setAttribute('rel', item.link.attributes.rel ) : link_attributes %}

                {% if loop.index == 2 %}
                    <div class="col-12 col-sm-10 col-md-8 ml-auto mr-auto col-lg-4 text-center mt-4 mt-lg-0 sl-1 pt-0 pt-lg-3 pb-0 pb-lg-3 bg-gray fdb-touch">
                        <div class="pb-5 pt-5 pl-4 pr-4">
                {% elseif loop.index == 3 %}
                    <div class="col-12 col-sm-10 col-md-8 ml-auto mr-auto col-lg-4 text-center mt-4 mt-lg-0">
                        <div class="bg-gray pb-5 pt-5 pl-4 pr-4">
                {% else %}
                    <div class="col-12 col-sm-10 col-md-8 m-auto col-lg-4 text-center">
                        <div class="bg-gray pb-5 pt-5 pl-4 pr-4">
                {% endif %}
                    {% if item.title is not empty %}
                        <h2 class="font-weight-light">{{ item.title }}</h2>
                    {% endif %}
                    {% if item.price is not empty %}
                         <p class="text-h1 mt-5 mb-5"><strong>{{ item.price }}</strong></p>
                    {% endif %}
                    {% if item.lists is not empty %}
                         <div class="text-left">{{ item.lists.value | raw }}</div>
                    {% endif %}
                    {% if item.link.url is not empty and item.link.title is not empty %}
                        {% if loop.index == 2 %}
                            {% set link_attributes = item.link.attributes.class is not empty ? link_attributes.setAttribute('class', item.link.attributes.class ~ ' btn btn-primary') : link_attributes.setAttribute('class','btn btn-primary') %}
                            <p class="text-center pt-4">
                                <a href="{{ item.link.url }}" {{ link_attributes }} > {{ item.link.title }} </a>
                            </p>
                        {% else %}
                            {% set link_attributes = item.link.attributes.class is not empty ? link_attributes.setAttribute('class', item.link.attributes.class ~ ' btn btn-outline-primary') : link_attributes.setAttribute('class','btn btn-outline-primary') %}
                            <p class="text-center pt-4">
                                <a href="{{ item.link.url }}" {{ link_attributes }} > {{ item.link.title }} </a>
                            </p>
                        {% endif %}
                    {% endif %}
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>
</div>

{% set image_uri_1 = (content.0.image_1.0 is defined) ? get_image(content.0.image_1.0) : '' %}
{% set fluid_image = image_uri_1|image_style('max_650x650') %}
{% set lqip_image_1 = image_uri_1|image_style('lqip') %}
{% set alt_image_1 = (content.0.image_alt_1) ? content.0.image_alt_1 : content.0.image_1.alt_image %}

{% set link_attributes = create_attribute() %}
{% set link_attributes = content.0.link_1.attributes.id is not empty ? link_attributes.setAttribute('id', content.0.link_1.attributes.id ) : link_1_attributes %}
{% set link_attributes = content.0.link_1.attributes.class is not empty ? link_attributes.setAttribute('class', content.0.link_1.attributes.class ~ ' btn btn-primary') : link_attributes.setAttribute('class','btn btn-primary') %}
{% set link_attributes = content.0.link_1.attributes.target is not empty ? link_attributes.setAttribute('target', content.0.link_1.attributes.target ) : link_1_attributes %}
{% set link_attributes = content.0.link_1.attributes.rel is not empty ? link_attributes.setAttribute('rel', content.0.link_1.attributes.rel ) : link_1_attributes %}

{% set image_uri_2 = (content.0.image_2.0 is defined) ? get_image(content.0.image_2.0) : '' %}
{% set thumb = image_uri_2|image_style('thumbnail') %}
{% set lqip_image_2 = image_uri_2|image_style('lqip') %}
{% set alt_image_2 = (content.0.image_alt_2) ? content.0.image_alt_2 : content.0.image_2.alt_image %}

{% set link_attributes = create_attribute() %}
{% set link_attributes = content.0.link_2.attributes.id is not empty ? link_attributes.setAttribute('id', content.0.link_2.attributes.id ) : link_2_attributes %}
{% set link_attributes = content.0.link_2.attributes.class is not empty ? link_attributes.setAttribute('class', content.0.link_2.attributes.class ~ ' btn btn-outline-primary ml-3') : link_attributes.setAttribute('class','btn btn-outline-primary ml-3') %}
{% set link_attributes = content.0.link_2.attributes.target is not empty ? link_attributes.setAttribute('target', content.0.link_2.attributes.target ) : link_2_attributes %}
{% set link_attributes = content.0.link_2.attributes.rel is not empty ? link_attributes.setAttribute('rel', content.0.link_2.attributes.rel ) : link_2_attributes %}

<div class="fdb-block">
    <div class="row align-items-center">
        <div class="col-10 col-sm-6 col-md-5 col-lg-4 m-auto pb-5 pb-md-0">
            <div class="img-ratio">
                {% if content.0.image_1.0 is not empty %}
                    <img alt="{{ alt_image_1 }}"
                            class="img-fluid br-0 lazyload"
                            src="{{ lqip_image_1 }}"
                            data-src="{{ fluid_image }}">
                {% endif %}
            </div>   
        </div>

        <div class="col-12 ml-md-auto col-md-7 col-lg-5 pb-5 pb-md-0">
            {% if content.0.image_2.0 is not empty %}
                <img alt="{{ alt_image_2 }}"
                    class="fdb-icon lazyload"
                    src="{{ lqip_image_2 }}"
                    data-src="{{ thumb }}">
            {% endif %}
            {% if content.0.title is not empty %}
                <h2>{{ content.0.title }}</h2>
            {% endif %}
            {% if content.0.description is not empty %}
                <p class="text-h3">{{ content.0.description }}</p>
            {% endif %}
            <p class="mt-4">
                <a href="{{ content.0.link_1.url }}" {{ link_attributes }} > {{ content.0.link_1.title }} </a>
                <a href="{{ content.0.link_2.url }}" {{ link_attributes }} > {{ content.0.link_2.title }} </a>
            </p>
        </div>
    </div>
</div>

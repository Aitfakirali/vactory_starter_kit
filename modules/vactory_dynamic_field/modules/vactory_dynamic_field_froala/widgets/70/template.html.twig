{% set image_uri_1 = (content.0.image_1.0 is defined) ? get_image(content.0.image_1.0) : '' %}
{% set image__1 = image_uri_1|image_style('thumbnail') %}
{% set lqip_image_1 = image_uri_1|image_style('lqip') %}
{% set alt_image_1 = (content.0.image_alt) ? content.0.image_alt_1 : content.0.image.alt_image %}

{% set image_uri_2 = (content.0.image_2.0 is defined) ? get_image(content.0.image_2.0) : '' %}
{% set image__2 = image_uri_2|image_style('large') %}
{% set lqip_image_2 = image_uri_2|image_style('lqip') %}
{% set alt_image_2 = (content.0.image_alt) ? content.0.image_alt_2 : content.0.image.alt_image %}

{% set reverse = (content.0.mode > 0)? 'd-flex row-reverse' : '' %}

{% set link_attributes = create_attribute() %}
{% set link_attributes = content.0.link.attributes.id is not empty ? link_attributes.setAttribute('id', content.0.link.attributes.id ) : link_attributes %}
{% set link_attributes = content.0.link.attributes.class is not empty ? link_attributes.setAttribute('class', content.0.link.attributes.class ~ ' btn btn-primary') : link_attributes.setAttribute('class','btn btn-primary') %}
{% set link_attributes = content.0.link.attributes.target is not empty ? link_attributes.setAttribute('target', content.0.link.attributes.target ) : link_attributes %}
{% set link_attributes = content.0.link.attributes.rel is not empty ? link_attributes.setAttribute('rel', content.0.link.attributes.rel ) : link_attributes %}

<div class="fdb-block pb-0 {{ reverse }}">
    <div class="align-items-end justify-content-center d-flex">
        <div class="row align-items-top text-left">
            <div class="col-12 col-md-6 col-lg-5">
                {% if content.0.image_1.0 is not empty %}
                    <div class="mb-5 mt-5">
                        <p class="lazy-wrapper">
                            <img alt="{{ alt_image_1 }}"
                                class="lazyload" height="40"
                                src="{{ lqip_image_1 }}"
                                data-src="{{ image__1 }}">
                        </p>
                    </div>
                {% endif %}
                {% if content.0.title is not empty %}
                    <h2>{{ content.0.title }}</h2>
                {% endif %}
                {% if content.0.description is not empty %}
                     <div class="text-h3">{{ content.0.description.value|raw }}</div>
                {% endif %}
                {% if content.0.link.url is not empty and content.0.link.title is not empty%}
                    <p class="mt-4">
                        <a href="{{ content.0.link.url }}" {{ link_attributes }} > {{ content.0.link.title }} </a>
                    </p>
                {% endif %}
            </div>
            {% if content.0.image_2.0 is not empty %}
                <div class="col-12 col-sm-4 col-md-6 col-lg-4 m-auto pt-5 lazy-wrapper">
                    <img alt="{{ alt_image_2 }}"
                            class="lazyload img-fluid br-0" height="40"
                            src="{{ lqip_image_2 }}"
                            data-src="{{ image__2 }}">
                </div>
            {% endif %}
        </div>
    </div>
</div>

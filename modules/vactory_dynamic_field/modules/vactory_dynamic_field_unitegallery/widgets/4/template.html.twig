{{ attach_library('vactory_dynamic_field_unitegallery/unitegallery.tiles.justified') }}
<div id="gallery--tiles-justified" data-provider="unitegallery" data-template="4" style="display:none;">
  {% for item in content %}
    {% set thumbnail_src = (item.thumbnail.0 is defined) ? get_image_url(item.thumbnail.0) : '' %}
    {% set image_src = (item.image.0 is defined) ? get_image_url(item.image.0) : '' %}
    {% set alt_image = (item.title) ? item.title : item.image.alt_image %}

    <a href="#.">
      <img alt="{{ alt_image }}"
           src="{{ thumbnail_src }}"
           data-image="{{ image_src }}"
           {#data-description="{{ item.description }}"#}
           style="display:none">
    </a>
  {% endfor %}
</div>

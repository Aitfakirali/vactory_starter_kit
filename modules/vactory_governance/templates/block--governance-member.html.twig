<div class='cdg-box governance-member'>
<ul class="nav nav-tabs d-flex flex-nowrap" id="myTab" role="tablist">
    {% for term in content.terms %}
        {% set active = (loop.first) ? ' active' : '' %}

        <li class="nav-item">
            <a class="nav-link {{ active }}" id="solution-credit-{{ term.tid }}-tab" data-toggle="tab" href="#solution-credit-{{ term.tid }}" role="tab" aria-controls="home"
               aria-selected="true">{{ term.name }}</a>
        </li>
    {% endfor %}
</ul>

<div class="tab-content" id="myTabContent">
    {% for term in content.terms %}
        {% set active = (loop.first) ? ' show active ' : '' %}
        <div class="tab-pane fade {{ active }}" id="solution-credit-{{ term.tid }}" role="tabpanel" aria-labelledby="home-tab">
          {% if term.children is empty %}
            {{ drupal_view('vactory_governance', 'block_three_columns_navbar', term.tid) }}
          {% else %}
            {% for child in term.children %}
              <h4><b>{{ child.name }}</b></h4>
              {{ drupal_view('vactory_governance', 'block_three_columns_navbar', child.tid) }}
            {% endfor %}
          {% endif %}
        </div>
    {% endfor %}
</div>
</div>

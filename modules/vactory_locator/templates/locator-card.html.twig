{% if classes is not defined %}
  {% set classes = [] %}
{% endif %}
{% set classes = classes|merge(['card','card--inline']) %}
<article {{ attributes.addClass(classes) }}>
  <div class="card card-col position-relative card--inline inline--agency">
    <div class="card-col position-relative card-image--inline agency-card">
      <div class="img-fluid vf-card__image">
        {{ fields.field_locator_image.content }}
      </div>
    </div>
    <div class="card-body d-flex flex-column justify-content-between">
      <div>
        <h4{{ title_attributes }} class="card-title">
          {% if locator_path is not empty %}
            <a href="{{ locator_path }}">
              <span class="font-semibold text-uppercase font-20">{{ fields.name.content }}</span>
            </a>
          {% endif %}
        </h4>
        <div>
          <div>{{ fields.field_locator_country.content }}
            {{ fields.field_locator_city.content }}
            {{ fields.field_locator_adress_address_line1.content }}
            {{ fields.field_locator_adress_postal_code.content }}
          </div>
          <div>{{ fields.field_locator_phone.content }}</div>
        </div>
        <div>
          <p>{{ fields.field_locator_description.content }}</p>
        </div>
      </div>
      <div class="align-self-end">
        <a href="#" class="btn btn-primary">{{ 'See it on maps'|t }}</a>
      </div>
    </div>
  </div>
</article>

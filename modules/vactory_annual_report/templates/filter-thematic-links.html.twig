<div class="t-rapport--listing-filtres--wrapper" role="group" aria-label="{{ 'Filter Thematic'|t }}">
  <h3>{{ "Filtrer par th√©matiques :" | t }}</h3>
  <ul class="t-rapport--listing-filtres no-style" role="group" aria-label="{{ 'Filter Thematic'|t }}">
    {% for tid, link in links %}
      {% if filter_current == tid %}
        {% set active = 'active' %}
      {% else %}
        {% set active = '' %}
      {% endif %}
      {% set color = (link.bg_color is not empty) ? link.bg_color : '#fff' %}
      {% if tid == 'All' %}
        <li>
          <a href="#" class="{{ active }}" id="{{ tid }}" class="tag">{{ 'Accueil'|t }}</a>
        </li>
      {% else %}
        <li>
          <a style="border-color:#{{ color }}; color:#{{ color }}" href="#." data-filter-name="{{ filter_name }}"
             id="{{ tid }}"
             class="tag filter-tab"># {{ link.name }}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>
